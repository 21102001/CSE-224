<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:text="Microsoft Teams"
        android:textColor="@color/purple_700"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:cardCornerRadius="80dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/microsoft_teams" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="7dp"
            android:text="Get started with your work,school or"
            android:textSize="15dp"
            android:typeface="sans">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="7dp"
            android:text="personal microsoft account"
            android:textSize="15dp"
            android:typeface="sans"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"
            android:hint="Enter email, phone or Skype"
            android:padding="19dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_margin="13dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Sign in"
            android:typeface="sans"></Button>

        <TextView
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Get help with signing in"
            android:textColor="@color/purple_700"
            android:textSize="16dp"
            android:typeface="sans" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/button2"
            android:text="Join a meeting"
            android:textColor="@color/purple_700"
            android:typeface="sans"></Button>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/button2"
            android:drawableLeft="@drawable/small_logo"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Sign up for free"
            android:textColor="@color/purple_700"
            android:typeface="sans"></Button>

    </LinearLayout>

</LinearLayout>